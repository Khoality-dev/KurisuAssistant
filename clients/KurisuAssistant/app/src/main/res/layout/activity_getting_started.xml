<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/setupLlmUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="LLM hub URL"/>

        <EditText
            android:id="@+id/setupTtsUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TTS hub URL (optional)"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/buttonCheckUrls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save hubs"/>

        <LinearLayout
            android:id="@+id/registerForm"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/setupUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Admin username"/>

            <EditText
                android:id="@+id/setupPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Password"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/buttonRegisterAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register admin"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
