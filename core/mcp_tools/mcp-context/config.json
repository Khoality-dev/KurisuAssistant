{
    "mcp_servers": {
        "mcp-context": {
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "--network",
                "kurisuassistant_default",
                "-e",
                "DATABASE_URL=postgres://kurisu:kurisu@postgres-container:5432/kurisu",
                "-i",
                "mcp/mcp-context"
            ]
        }
    }
}